        mc:Ignorable="d"
       Title="메모라이저 Memorizer | 도움말" Height="580" Width="1028" ResizeMode="CanMinimize" MouseLeftButtonDown="Inform_MouseDown" WindowStyle="None" BorderBrush="#FF3AA0FB" BorderThickness="2" Icon="Memorizer.ico" WindowStartupLocation="CenterOwner">
